{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "outDir": "target",
    "allowJs": false,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*"]
}
